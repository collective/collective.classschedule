<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    name="Course"
    meta_type="Dexterity FTI"
    i18n:domain="collective.classschedule">

  <!-- Basic properties -->
  <property
      i18n:translate=""
      name="title">Course</property>
  <property
      i18n:translate=""
      name="description"></property>

  <property name="allow_discussion">False</property>
  <property name="factory">Course</property>
  <property name="icon_expr">string:puzzle</property>
  <property name="link_target"></property>

  <!-- Hierarchy control -->
  <property name="global_allow">True</property>
  <!-- Schema, class and security -->
  <property name="add_permission">collective.classschedule.AddCourse</property>
  <property name="klass">collective.classschedule.content.course.Course</property>
  <property name="model_file"></property>
  <property name="model_source"></property>
  <property name="schema">collective.classschedule.content.course.ICourse</property>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="true">
    <element value="plone.basic"/>
    <element value="plone.namefromtitle"/>
    <!-- <element value="plone.excludefromnavigation"/>
    <element value="plone.shortname"/> -->
    <element value="collective.classschedule.professor"/>
    <element value="collective.classschedule.professor_assistant"/>
    <element value="plone.eventbasic" />
    <element value="plone.eventrecurrence" />
    <!-- <element value="plone.eventlocation" /> -->
    <!-- <element value="plone.eventattendees" /> -->
    <!-- <element value="plone.eventcontact" /> -->
    
    
    
  </property>

  <!-- View information -->
  <property name="add_view_expr">string:${folder_url}/++add++Course</property>
  <property name="default_view">view</property>
  <property name="default_view_fallback">False</property>
  <property name="immediate_view">view</property>
  <property name="view_methods">
    <element value="view"/>
  </property>

  <!-- Method aliases -->
  <alias
      from="(Default)"
      to="(dynamic view)"
  />
  <alias
      from="edit"
      to="@@edit"
  />
  <alias
      from="sharing"
      to="@@sharing"
  />
  <alias
      from="view"
      to="(selected layout)"
  />

  <!-- Actions -->
  <action
      action_id="view"
      category="object"
      condition_expr=""
      i18n:attributes="title"
      i18n:domain="plone"
      title="View"
      icon_expr="string:toolbar-action/view"
      url_expr="string:${object_url}"
      visible="True">
    <permission value="View"/>
  </action>
  <action
      action_id="edit"
      category="object"
      condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
      i18n:attributes="title"
      i18n:domain="plone"
      title="Edit"
      icon_expr="string:toolbar-action/edit"
      url_expr="string:${object_url}/edit"
      visible="True">
    <permission value="Modify portal content"/>
  </action>

</object>
